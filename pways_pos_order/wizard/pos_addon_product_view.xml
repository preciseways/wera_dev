<odoo>
    <record id="addon_group_product_form_view" model="ir.ui.view">
        <field name="name">addon.group.form</field>
        <field name="model">addon.group</field>
        <field name="arch" type="xml">
            <form>
                <sheet>   
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="addon_min_limit" readonly="1"/>
                            <field name="addon_limit" readonly="1"/>
                        </group>
                        <group>
                            <field name="addon_free_limit" readonly="1"/>
                            <field name="order" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Addon Product">
                            <field name="addons_product_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="product_name"/>
                                    <field name="is_veg"/>
                                    <field name="in_stock"/>
                                    <field name="is_default"/>
                                    <field name="order"/>
                                    <field name="price"/>
                                    <field name="taxes_id" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_addon_group_product_wizard" model="ir.actions.act_window">
        <field name="name">Addons Group Product</field>
        <field name="type">ir.actions.act_window</field> 
        <field name="res_model">addon.group</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>